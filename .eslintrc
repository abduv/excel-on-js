{
    "parser": "babel-eslint",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jest": true
    },
    "rules": {
        "semi": "off",
        "linebreak-style": "off",
        "require-jsdoc": "off",
        "arrow-parens": "off",
        "indent": ["error", 4],
        "comma-dangle": "off",
        "no-unused-vars": "warn",
        "operator-linebreak": "off",
        "padded-blocks": "off"
    },
    "extends": ["eslint:recommended", "google"]
}
